array = [random.randint(-100, 100) for _ in range (100)]
print(*array)

n = 1
while n < len(array):
    for i in range(len(array)-n):
        if array[i] < array[i+1]:
            array[i],array[i + 1] = array[i + 1], array[i]
    n +=1
